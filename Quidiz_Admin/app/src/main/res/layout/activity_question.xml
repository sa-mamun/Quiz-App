<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuestionActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/questionToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:background="#5FC8E4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="5dp"
            android:foreground="?selectableItemBackground"
            >

            <LinearLayout
                android:id="@+id/questionLL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Category"
                    android:layout_gravity="start"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimaryDark"
                    />

                <Spinner
                    android:id="@+id/catSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:layout_gravity="start"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Set No"
                    android:layout_gravity="start"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimaryDark"
                    />

                <Spinner
                    android:id="@+id/setSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:layout_gravity="start"
                    />

                <EditText
                    android:id="@+id/questionET"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:hint="Enter Question"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edittext_bg"
                    android:padding="15dp"
                    android:textColor="@android:color/black"
                    />

                <EditText
                    android:id="@+id/optionA_ET"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:hint="Option A"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edittext_bg"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    />
                <EditText
                    android:id="@+id/optionB_ET"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:hint="Option B"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_bg"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    />
                <EditText
                    android:id="@+id/optionC_ET"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:hint="Option C"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_bg"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    />
                <EditText
                    android:id="@+id/optionD_ET"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:hint="Option D"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_bg"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    />

                <EditText
                    android:id="@+id/correctAns_ET"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:hint="Correct Ans"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_bg"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    />

                <Button
                    android:id="@+id/addQuestionBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add"
                    android:background="@drawable/button_bg"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="end"
                    android:textColor="@android:color/black"
                    />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>